        <TextBox Width="400" Height="20" HorizontalAlignment="Left" Margin="50,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Name="txtService" >
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
