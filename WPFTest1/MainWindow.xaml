            </TextBox.Style>
        </TextBox>



        <ComboBox HorizontalAlignment="Left" Margin="103,212,0,0" VerticalAlignment="Top" Width="347" RenderTransformOrigin="-0.259,3.864" Name="cbxProcess"/>
        <Label Content="Process
" HorizontalAlignment="Left" Margin="50,210,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
